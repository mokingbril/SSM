@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>系统登录</title>
    <link href="~/Content/SSM.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.7.1.js"></script>
</head>
<body class="Main">
    <div id="LoginMain">
        <div class="login_b">
            <h3 style="color:green;background-color:grey;">欢迎登录</h3>
            <h1 style="color:white;margin-bottom:25px;">学生成绩管理系统</h1>
            <form action="/Default/Login" method="post">
                <table id="tbLogin">
                    <tr><td>用户名：</td><td><input type="text" id="LoginName" required name="LoginName"/></td></tr>
                    <tr><td>密&nbsp;&nbsp;&nbsp;码：</td><td><input type="password" id="LoginPwd" required name="LoginPwd" /></td></tr>
                    <tr>
                        <td>身&nbsp;&nbsp;&nbsp;份：</td>
                        <td><select id="RId" name="RId" style="float: left;">
                                <option value="1">管理员</option><option value="2" selected="selected">学生</option>
                                <option value="3">教师</option></select>
                        </td>
                    </tr>
                    <tr><td></td><td style="float:left;"><input type="checkbox" id="AutoLogin" name="AutoLogin" value="true"/>自动登录
                        <a href="/Default/Register" style="font-weight:bolder;margin-left:15px;">立即注册</a></td></tr>
                    <tr><td></td><td><input type="submit" id="btnLogin" class="login_btn" style="background:url(../Content/Images/btnLogin.png)" value=""/>
                        <input type="reset" id="btnReset" class="login_btn" style="background:url(../Content/Images/btnReset.png);margin-left:20px;" value=""/></td></tr>
                </table>
                <p><span class="error">@ViewBag.ErrorInfo</span></p>
            </form>
        </div>
    </div>
    <script type="text/javascript">
        $("#btnLogin").click(function () {
            if ($("#LoginName").val() == "" || $("#LoginPwd").val() == "") {
                alert("温馨提示:账号、密码必填！");
                return false;
            }
        })
    </script>
</body>
</html>
